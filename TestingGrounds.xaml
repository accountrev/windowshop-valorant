<Window x:Class="Windowshop.TestingGrounds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windowshop"
        mc:Ignorable="d"
        Title="TestingGrounds" Height="450" Width="800">

    <Window.Resources>
        <FontFamily x:Key="TungstenBold">pack://application:,,,/Resources/Tungsten-Bold.ttf#Tungsten Bold</FontFamily>
        <FontFamily x:Key="DINNextRegular">pack://application:,,,/Resources/DIN-Next-Regular.otf#DIN Next W1G</FontFamily>
        <FontFamily x:Key="DINNextMedium">pack://application:,,,/Resources/DIN-Next-Medium.otf#DIN Next W1G Medium</FontFamily>
        <FontFamily x:Key="DINNextLight">pack://application:,,,/Resources/DIN-Next-Light.otf#DIN Next W1G Light</FontFamily>
    </Window.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontFamily="{DynamicResource TungstenBold}" Foreground="Black" Width="464" Margin="10,10,0,0" Height="52">
            Tungsten Bold (TUNGSTEN-BOLD.TTF)
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontFamily="{DynamicResource DINNextRegular}" Foreground="Black" Width="575" Margin="10,54,0,0" Height="52">
            DIN Next Regular (DIN-NEXT-REGULAR.OTF)
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontFamily="{DynamicResource DINNextMedium}" Foreground="Black" Width="601" Margin="10,100,0,0" Height="52">
            DIN Next Medium (DIN-NEXT-MEDIUM.OTF)
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontFamily="{DynamicResource DINNextLight}" Foreground="Black" Width="601" Margin="10,152,0,0" Height="52">
            DIN Next Light (DIN-NEXT-LIGHT.OTF)
        </TextBlock>
    </Grid>
</Window>
